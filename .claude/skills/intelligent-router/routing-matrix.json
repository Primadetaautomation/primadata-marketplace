  "complexity_thresholds": {
    "simple": {
      "max_words": 10,
      "max_domains": 1,
      "auto_dispatch": true
    },
    "medium": {
      "max_words": 30,
      "max_domains": 2,
      "auto_dispatch": true
    },
    "high": {
      "max_words": 50,
      "max_domains": 3,
      "auto_dispatch": true
    },
    "complex": {
      "min_domains": 3,
      "auto_dispatch": false,
      "requires_confirmation": true
    }
  },
  "auto_detect_config": {
    "min_word_count": 4,
    "action_verbs": ["maak", "bouw", "fix", "deploy", "test", "create", "build", "implement", "add", "update", "optimaliseer", "optimize", "verbeter", "improve", "zoek", "find", "search", "verwijder", "delete", "remove", "refactor", "schrijf", "write", "lees", "read", "installeer", "install", "configureer", "configure", "setup", "review", "check", "valideer", "validate"],
    "skip_keywords": ["wat is", "hoe werkt", "uitleg", "explain", "what is", "how does", "wie is", "who is", "wanneer", "when"],
    "always_check_memory": true
  }
